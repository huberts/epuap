# http://editorconfig.org

root = true

[**]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.c]
charset = latin1
end_of_line = crlf

[**.cpp]
charset = latin1
end_of_line = crlf

[**.h]
charset = latin1
end_of_line = crlf

[**.rc*]
charset = latin1
end_of_line = crlf
indent_size = 4

[**.def]
charset = latin1
end_of_line = crlf

[**.sln]
charset = latin1
end_of_line = crlf
indent_style = tab

[**.vcproj]
charset = latin1
end_of_line = crlf
indent_style = tab

[**.cmd]
charset = latin1
end_of_line = crlf
